    <div class="row">
        <h1 class="text-center">New Watching Spot</h1>
        <div class="col-6 offset-3">
            <form action="/watchingspots" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title: </label>
                    <input class="form-control" type="text" id="title" name="watchingspot[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" id="location" name="watchingspot[location]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="img">Img Url: </label>
                    <input class="form-control" type="text" id="img" name="watchingspot[image]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="typeOfOwl">Type of Owls: </label>
                    <input class="form-control" type="text" id="typeOfOwl" name="watchingspot[typeOfOwl]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" id="description"
                        name="watchingspot[description]"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Watching Spot</button>
                </div>
            </form>
            <a href="/watchingspots">Back</a>
        </div>
    </div>