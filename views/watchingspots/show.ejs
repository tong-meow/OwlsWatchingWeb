<% layout('layouts/BoilerPlate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-5">
                <img src="<%= ws.image %>" class="card-img-top" alt="Owls Watching Spot">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= ws.title %>
                    </h5>
                    <p class="card-text">
                        <%= ws.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>Location:</b>
                        <%= ws.location %>
                    </li>
                    <li class="list-group-item"><b>Type of Owls:</b>
                        <%= ws.typeOfOwl %>
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-success" href="/watchingspots" class="card-link">Back</a>
                    <a class="card-link btn btn-success" href="/watchingspots/<%= ws._id %>/edit"
                        class="card-link">Edit</a>
                    <form class="d-inline" action="/watchingspots/<%= ws._id %>?_method=DELETE" method="POST">
                        <button class="card-link btn btn-warning">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>