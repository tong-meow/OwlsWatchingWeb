<% layout('layouts/BoilerPlate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <%= err.message %>
                </h4>
                <hr>
                <p class="mb-0">Hey, a little owl wants to tell you that there is something wrong with the
                    OwlsWatchingWeb... Please try again later.</p>
                <hr>
                <!-- show error messages on page
                should commented out finally!!! -->
                <% if (process.env.NODE_ENV !== "production") { %>
                <p><%= err.stack %></p>
                <% } %>
            </div>
        </div>
    </div>